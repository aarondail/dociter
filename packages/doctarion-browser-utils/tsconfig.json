{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "composite": true,
    "strict": true,        
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": [ "custom-types/**/*", "src/**/*", "tests/**/*" ],
  "references": [
    { "path": "../doctarion-document/tsconfig.build.json" },
    { "path": "../doctarion-utils/tsconfig.build.json" }
  ]
}
