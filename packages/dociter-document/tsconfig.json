{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "composite": true,
    "strict": true,        
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [ "src/**/*" ],
  "exclude": ["src/**/*.test.*"]
}
